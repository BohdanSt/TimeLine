<UserControl x:Class="TimeLine.GamesResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeLine"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="750">
    <Grid>
        <Button x:Name="buttonGameAgaine" Content="Розпочати знову" Margin="100,340,450,100" Height="60" 
                FontSize="16" Click="buttonGameAgaine_Click">
            <Button.Background>
                <SolidColorBrush Color="WhiteSmoke" Opacity="0.65"/>
            </Button.Background>
        </Button>
        <Button x:Name="buttonGameOver" Content="Закінчити гру" Margin="450,340,100,100" Height="60"
                FontSize="16" Click="buttonGameOver_Click">
            <Button.Background>
                <SolidColorBrush Color="WhiteSmoke" Opacity="0.65"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
